@model List<CricZat.Models.userTable>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html lang="en">

  
    <title>Profile</title>

    <body>
        <section class="section about-section gray-bg" id="about">
            <div class="container">
                <div class="row align-items-center flex-row">
                    <div class="col-lg-3">
                        <div class="about-avatar">
                            <img class="w-75 border p-2" name="userImage" src="https://bootdey.com/img/Content/avatar/avatar7.png" title="" alt="">
                        </div>
                    </div>
                    <div class="col-lg-9">
                        <div class="about-text go-to">
                            <h3 class="dark-color">User Name</h3>
                            <p>Description</p>
                            <button type="button" class="btn btn-outline-info">Save Info</button>
                        </div>
                    </div>

                </div><br>
                <div class="shadow-lg p-3 mb-5 bg-body rounded">

                    <div class="edit-inputs">
                        <p>Name</p>
                        <form action="" method="post" enctype="multipart/form-data">
                            <textarea name="title" id="" cols="30" rows="1" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="top" data-trigger="hover" data-bs-content="You can't change your name." disabled></textarea><br>
                        </form>
                    </div>
                    <div class="edit-inputs">
                        <p>Description</p>
                        <form action="" method="post" enctype="multipart/form-data">
                            <textarea name="title" id="" cols="30" rows="1" placeholder="Add Description"></textarea><br>
                        </form>
                    </div>

                    <div class="edit-input-pp">
                        <p>Change Your Profile Picture</p>
                        <form action="" method="post" enctype="multipart/form-data">
                            <input class="choose-btn" type="file" name="image" id=""><br>
                        </form>
                    </div>






                </div>
            </div>
        </section>


        <link rel="stylesheet" href="~/Content/edit.css">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

        <script type="text/javascript">

        </script>
    </body>
</html>
